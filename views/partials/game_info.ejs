<div class="project-top flex-column text-center">
    <div class="game-top w-100 mb-4">
        <h1 class="game-info"><%= title %></h1>
    </div>
<div class="row d-flex justify-content-center">
    <div class="col-lg-7">
        <div id="gameCarousel" class="carousel slide border border-light" data-ride="carousel" data-interval="false">
            <ol class="carousel-indicators">
                <% let i = 0; %>
                <% let slides = 0; %>
                <% isTrailer == 'y'? slides = images.length + 1 : slides = images.length%>
                <% for (i = 0; i < slides; i++) { %>
                    <% if (i < 1) { %>
                        <li data-target="#gameCarousel" data-slide-to="<%= i %>" class="active"></li>
                    <% } else { %>
                        <li data-target="#gameCarousel" data-slide-to="<%= i %>"></li>
                    <% } %>
              <% } %>
            </ol>
            <div class="carousel-inner">
                <% let j = 0; %>
                <% if (isTrailer == 'y') { %>
                    <div class="carousel-item active">
                      <div class="embed-responsive embed-responsive-16by9 video-trailer mx-auto w-100">
                          <iframe class="embed-responsive-item" src="<%= trailer%>" ></iframe>
                      </div> 
                    </div>
                    <% } %>
                <% slides = images.length%>
                <% for (j = 0; j < slides; j++) { %>
                    <% if (j < 1 && isTrailer != 'y') { %>
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="<%= images[j] %>" >
                          </div>
                    <% } else { %>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="<%= images[j] %>" >
                          </div>
                    <% } %>
              <% } %>
             
            </div>
            <a class="carousel-control-prev" href="#gameCarousel" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#gameCarousel" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
    </div>
  
</div>
<div class="container">
    <hr class="separator">
    <% if (steam == 'y') { %>
        <div class="text-center game-paragraph">
            <h3>Play Now for Free on Steam!</h3>
            <a href="https://store.steampowered.com/app/1320550/The_Call_of_Karen/"><img class="github-pic" src="../images/steam.png"></a>
        </div>  
        <br>
    <% } %>
    <% if (canPlay == 'y') { %>
        <div class="text-center game-paragraph">
            <h3>Playable <solid><a href="https://clumsyguppy.github.io/Website%20Files/A10/game.html" style="color:rgb(140, 216, 246)">here!</a></solid></h3>
        </div>  
        <br>
    <% } %>
    <div class="game-paragraph">
      
        <h4 class="text-center mb-1 ml-4 mr-4"><%= synopsis %></h4>
        <hr class="separator">
        <h4 class="text-center mb-1"><strong>Role:</strong> <%= role %></h4>
        <br>
        <h4 class="text-center mb-1"><strong>Tools: </strong><%= tools %></h4>
        <br>
        <h4 class="text-center mb-1">What I did for this project: </h4>
        <br>
        <ul>
            <% let k = 0; %>
            <% for (k = 0; k < contrib.length; k++) { %>
                <li class="ml-5 mb-2"> <h5><%- contrib[k] %></h5></li>
            <% } %>
        </ul>
    </div>
</div>

